<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint"
    tools:context=".MainActivity">


      <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
          android:id="@+id/helper"
         >


     <TextView
        android:id="@+id/wattsOutput"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="WATTS: "
        android:textColor="@color/blue"
        android:textSize="28sp" />

     <Button
        android:id="@+id/calculate"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_marginLeft="33dp"
android:layout_below="@id/adView"
         android:layout_marginTop="10dp"
         android:backgroundTint="@color/blue"
        android:onClick="onClick"

       />

      <EditText
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="20dp"
        android:ems="6"
        android:inputType="numberDecimal"
        android:layout_below="@+id/wattsOutput"
        android:hint="(km/h)"/>

      <EditText
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:inputType="number"
        android:layout_below="@id/speed"
        android:layout_marginTop="10dp"
        android:layout_marginStart="200dp"
        android:hint="(kg)"/>

          <EditText
        android:id="@+id/bikeWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:inputType="number"
        android:layout_below="@id/weight"
        android:layout_marginTop="10dp"
        android:layout_marginStart="200dp"
        android:hint="(kg)"/>

       <EditText
        android:id="@+id/slope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:inputType="numberDecimal"
        android:layout_below="@id/bikeWeight"
        android:layout_marginTop="10dp"
        android:layout_marginStart="200dp"
        android:hint="(%)"/>

       <EditText
        android:id="@+id/altitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:inputType="number"
        android:layout_below="@id/slope"
        android:layout_marginTop="10dp"
        android:layout_marginStart="200dp"
        android:hint="(Metres)"/>


       <EditText
        android:id="@+id/wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:inputType="number"
        android:layout_below="@id/altitude"
        android:layout_marginTop="10dp"
        android:layout_marginStart="200dp"
        android:hint="(km/h)"/>


       <EditText
        android:id="@+id/rR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:inputType="numberDecimal"
        android:layout_below="@id/wind"
        android:layout_marginTop="10dp"
        android:layout_marginStart="200dp"
        android:hint="Crr"/>

       <EditText
        android:id="@+id/cda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="6"
        android:inputType="numberDecimal"
        android:layout_below="@id/rR"
        android:layout_marginTop="10dp"
        android:layout_marginStart="200dp"
        android:hint="cda"/>

       <EditText
        android:id="@+id/loss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cda"
        android:layout_marginStart="200dp"
        android:layout_marginTop="10dp"
        android:ems="6"
        android:hint="(%)"
        android:inputType="numberDecimal" />

       <TextView
        android:id="@+id/speed2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wattsOutput"
        android:layout_marginTop="31dp"
        android:text="Speed:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_toLeftOf="@id/speed"
        android:layout_marginRight="-170dp"/>

       <TextView
        android:id="@+id/weight2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wattsOutput"
        android:layout_marginTop="85dp"
        android:text="Weight:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_toLeftOf="@id/speed"
        android:layout_marginRight="-170dp"/>

       <TextView
        android:id="@+id/bikeWeight2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/speed2"
        android:layout_marginTop="85dp"
        android:text="Bike Weight:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_toLeftOf="@id/speed"
        android:layout_marginRight="-170dp"/>

       <TextView
        android:id="@+id/slope2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bikeWeight2"
        android:layout_marginTop="29dp"
        android:text="Slope:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_toLeftOf="@id/speed"
        android:layout_marginRight="-170dp"/>

       <TextView
        android:id="@+id/altitude2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slope2"
        android:layout_marginTop="26dp"
        android:text="Altitude:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_toLeftOf="@id/speed"
        android:layout_marginRight="-170dp"/>

       <TextView
        android:id="@+id/wind2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/altitude2"
        android:layout_marginTop="26dp"
        android:text="Wind:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_toLeftOf="@id/speed"
        android:layout_marginRight="-170dp"/>

       <TextView
        android:id="@+id/rR2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wind2"
        android:layout_marginTop="26dp"
        android:text="Rolling Resist.:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_toLeftOf="@id/speed"
        android:layout_marginRight="-170dp"/>

       <TextView
        android:id="@+id/cda2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rR2"
        android:layout_marginTop="28dp"
        android:text="CDA:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_toLeftOf="@id/speed"
        android:layout_marginRight="-170dp"/>

       <TextView
        android:id="@+id/loss2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cda2"
        android:layout_marginTop="29dp"
        android:text="Efficiency:"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_toLeftOf="@id/speed"
           android:layout_marginBottom="15dp"
        android:layout_marginRight="-170dp"/>

         <Button
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/helpBtn"
             android:layout_below="@id/adView"
             android:layout_toRightOf="@id/calculate"
             android:backgroundTint="@color/blue"
             android:text="HELP"
             android:onClick="onCli"
             android:layout_marginTop="10dp"
             />
          <com.google.android.gms.ads.AdView
              xmlns:ads="http://schemas.android.com/apk/res-auto"
              android:id="@+id/adView"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              ads:adSize="BANNER"
              ads:adUnitId="ca-app-pub-9354629606296819/5273344457"
              android:layout_below="@id/loss2"
              >
          </com.google.android.gms.ads.AdView>


      </RelativeLayout>
</ScrollView>